<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="#595959"
        android:padding="13dp"
        android:text="Login Form"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/loginSpinnerId"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:id="@+id/loginSpinnerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="101dp"></Spinner>


    <EditText
        android:id="@+id/loginEmailId"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="8dp"

        android:layout_marginBottom="8dp"
        android:hint="enter Email Id.."
        app:layout_constraintBottom_toTopOf="@+id/loginPasswordId"
        app:layout_constraintTop_toBottomOf="@+id/loginSpinnerId"
        app:layout_constraintVertical_bias="0.529"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/loginPasswordId"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="60dp"
        android:hint="enter Password.."
        app:layout_constraintBottom_toTopOf="@+id/loginForgotPasswordId"
        app:layout_constraintTop_toBottomOf="@+id/registrationEmailId"
        app:layout_constraintVertical_bias="0.031"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/loginForgotPasswordId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="forgot Password ?"
        app:layout_constraintBottom_toTopOf="@+id/loginLoggedInId"
        tools:layout_editor_absoluteX="122dp" />


    <Button
        android:id="@+id/loginLoggedInId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="408dp" />
</android.support.constraint.ConstraintLayout>